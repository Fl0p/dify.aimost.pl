# Domain configuration
# Replace with your domain name
NGINX_SERVER_NAME=your-domain.com

# Nginx configuration
# Cloudflare Tunnel handles SSL automatically, so HTTPS is not needed in nginx
NGINX_PORT=80

# API URLs
# Replace with your domain name
# For Cloudflare Tunnel: use https:// (Cloudflare provides SSL automatically)
CONSOLE_API_URL=https://your-domain.com
CONSOLE_WEB_URL=https://your-domain.com
SERVICE_API_URL=https://your-domain.com
APP_API_URL=https://your-domain.com
APP_WEB_URL=https://your-domain.com
FILES_URL=https://your-domain.com
INTERNAL_FILES_URL=http://api:5001

# Database configuration
# PostgreSQL container initialization variables / initial setup maybe removed on second launch
POSTGRES_USER=postgres
# IMPORTANT: Change this password in production!
POSTGRES_PASSWORD=difyai123456
POSTGRES_DB=dify

# Application database connection variables (should match POSTGRES_* values)
DB_USERNAME=postgres
DB_PASSWORD=difyai123456
DB_HOST=db
DB_PORT=5432
DB_DATABASE=dify

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
# IMPORTANT: Change this password in production!
REDIS_PASSWORD=difyai123456

# Secret key - IMPORTANT: Generate a new secret key for production!
# You can generate one using: openssl rand -hex 32
SECRET_KEY=replace-with-your-own-secret-key

# Weaviate API key - IMPORTANT: Change this in production!
# You can generate one using: openssl rand -hex 32
WEAVIATE_API_KEY=replace-with-your-own-api-key

# Sandbox API key - IMPORTANT: Change this in production!
# You can generate one using: openssl rand -hex 32
SANDBOX_API_KEY=dify-sandbox

# Plugin daemon key - IMPORTANT: Change this in production!
# You can generate one using: openssl rand -hex 32
PLUGIN_DAEMON_KEY=replace-with-your-own-api-key

# Plugin Dify inner API key - IMPORTANT: Change this in production!
# You can generate one using: openssl rand -hex 32
PLUGIN_DIFY_INNER_API_KEY=replace-with-your-own-api-key

# Initial admin password - Set this for the first admin user
# Leave empty to set during first login
INIT_PASSWORD=

# Vector store (options: weaviate, qdrant, pgvector, etc.)
VECTOR_STORE=weaviate

# Storage configuration
STORAGE_TYPE=opendal
OPENDAL_SCHEME=fs
OPENDAL_FS_ROOT=storage

# Exposed ports
# For Cloudflare Tunnel: ports are not needed (comment out or leave as-is, tunnel connects internally)
# For direct access: expose port 80
EXPOSE_NGINX_PORT=80
